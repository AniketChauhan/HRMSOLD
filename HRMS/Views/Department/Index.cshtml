@model IEnumerable<HRMS.Models.HRMS_DEPT>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count<HRMS.Models.HRMS_DEPT>() > 0 && Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dept_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sort_Name)
            </th>
            <th>
                Parent Department
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sort_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Dept_Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="container">
        <h2 class="text-center text-primary">sorry!!! We don't have any Grade Data Right Now...</h2>
    </div>
}